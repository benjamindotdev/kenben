generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  ipAddr   String
  name     String
  items    Item[]
}

model Item {
  id          String   @id @default(uuid())
  title       String
  description String
  assignee    String
  status      Status
  priority    String
  createdDate DateTime @default(now())
  dueDate     DateTime
  user        User     @relation(fields: [assignee], references: [id])
}

enum Status {
  TODO
  IN_PROGRESS
  DONE
  BACKLOG
}